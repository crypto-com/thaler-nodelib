{
  "name": "@crypto-com/chain-nodelib",
  "version": "0.3.2",
  "description": "Crypto.com Chain library for Node.js",
  "main": "lib/dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crypto-com/chain-nodelib.git"
  },
  "author": "Crypto.com <chain@crypto.com>",
  "license": "Apache-2.0",
  "files": [
    "lib/dist",
    "native/.npmkeep",
    "native/index.node",
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "SECURITY.md"
  ],
  "binary": {
    "module_name": "index",
    "host": "https://github.com/crypto-com/chain-nodelib/releases/download/",
    "remote_path": "{version}",
    "package_name": "{node_abi}-{platform}-{arch}.tar.gz",
    "module_path": "./native",
    "pkg_path": "."
  },
  "dependencies": {
    "@amilajack/node-pre-gyp": "github:amilajack/node-pre-gyp#neon-compat",
    "axios": "0.20.0",
    "bignumber.js": "9.0.0",
    "bip32": "2.0.5",
    "bip39": "3.0.2",
    "lodash": "4.17.20",
    "lossless-json": "1.0.4",
    "node-pre-gyp-github": "1.4.3",
    "ow": "0.15.0"
  },
  "devDependencies": {
    "@types/axios": "0.14.0",
    "@types/bignumber.js": "5.0.0",
    "@types/chai": "4.2.12",
    "@types/deep-equal": "1.0.1",
    "@types/lodash": "4.14.160",
    "@types/lossless-json": "1.0.0",
    "@types/mocha": "8.0.3",
    "@types/node": "14.6.0",
    "@types/sinon": "9.0.10",
    "@typescript-eslint/eslint-plugin": "2.34.0",
    "@typescript-eslint/parser": "2.34.0",
    "axios": "0.20.0",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "deep-equal": "2.0.3",
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "14.2.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-prettier": "3.1.4",
    "mocha": "7.2.0",
    "mocha-steps": "^1.3.0",
    "neon-cli": "0.4.0",
    "nodemon": "2.0.4",
    "prettier": "2.1.1",
    "sinon": "9.0.3",
    "ts-node": "9.0.0",
    "typedoc": "^0.18.0",
    "typedoc-plugin-external-module-name": "^4.0.3",
    "typescript": "4.0.2"
  },
  "scripts": {
    "version": "node -pe \"require('./package.json').version\"",
    "install": "./install.sh",
    "install:prebuild": "node-pre-gyp install --fallback-to-build=false",
    "build": "npm run build:neon && npm run build:tsc",
    "build:neon": "neon build --release",
    "build:tsc": "tsc",
    "binary:publish": "npm run binary:package && npm run binary:upload",
    "binary:package": "node-pre-gyp package",
    "binary:upload": "node-pre-gyp-github publish",
    "clean:all": "npm run clean & npm run clean:docs",
    "clean": "rm -rf ./node_modules && rm -rf ./native/target && rm -f ./native/index.node",
    "clean:docs": "rm -rf docs/themes/node_modules && rm -rf docs/dist",
    "predocs:build": "npm install || exit 0",
    "docs:build": "./docs/build.sh",
    "typedoc:build:force": "rm -rf docs/dist && npm run typedoc:build",
    "pretypedoc:build": "cd docs/themes && npm install",
    "typedoc:build": "npm run typedoc:theme:build && typedoc --options typedoc.json",
    "typedoc:theme:build": "cd docs/themes && npm run build",
    "lint": "npm run lint:typescript && npm run lint:rust",
    "lint:typescript": "eslint 'lib/**'",
    "lint:rust": "cd native && cargo fmt -- --check --color=auto",
    "audit": "npm run audit:npm && npm run audit:rust",
    "audit:npm": "npm audit --audit-level=moderate",
    "audit:rust": "cd native && cargo audit",
    "test": "NODE_ENV=test mocha --require ./node_modules/ts-node/register --exit --color --recursive 'lib/src/**/*.spec.ts'",
    "test:watch": "NODE_ENV=test nodemon",
    "test:integration": "NODE_ENV=integration-test mocha --require ./node_modules/ts-node/register --exit --color --recursive 'integration-tests/**/*.spec.ts'",
    "ci:withdraw-all-stake": "ts-node ./integration-tests/withdraw-all-stake.ts"
  },
  "bugs": {
    "url": "https://github.com/crypto-com/chain-nodelib/issues"
  },
  "homepage": "https://github.com/crypto-com/chain-nodelib#readme",
  "directories": {
    "doc": "docs",
    "lib": "lib"
  }
}
